---
const projects = [
  {
    title: 'تصميم هوية بصرية',
    category: 'هوية بصرية',
    image: '/projects/brand1.jpg',
    description: 'هوية بصرية متكاملة لشركة تقنية ناشئة'
  },
  {
    title: 'موقع إلكتروني',
    category: 'تصميم مواقع',
    image: '/projects/web1.jpg',
    description: 'موقع عصري لشركة عقارات'
  },
  {
    title: 'تطبيق جوال',
    category: 'واجهة المستخدم',
    image: '/projects/app1.jpg',
    description: 'تصميم تطبيق للتجارة الإلكترونية'
  }
];
---

<section id="projects" class="py-20 bg-primary/50">
  <div class="container mx-auto px-6">
    <h2 class="text-4xl font-bold text-center mb-16">أعمالنا</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {
        projects.map((project) => (
          <div class="group relative overflow-hidden rounded-lg">
            <div class="aspect-video bg-accent/20 rounded-lg"></div>
            <div class="absolute inset-0 bg-gradient-to-t from-primary via-primary/80 to-transparent opacity-0 group-hover:opacity-100 transition-all duration-300 flex flex-col justify-end p-6">
              <span class="text-accent text-sm mb-2">{project.category}</span>
              <h3 class="text-xl font-bold mb-2">{project.title}</h3>
              <p class="text-secondary/80 text-sm">{project.description}</p>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>