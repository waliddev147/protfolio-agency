---
const steps = [
  {
    number: '١',
    title: 'تحليل استراتيجيتك الحالية',
    description: 'دراسة شاملة لجهود التسويق السابقة'
  },
  {
    number: '٢',
    title: 'مراجعة السوق والمنافسين',
    description: 'تحليل دقيق للسوق والمنافسين'
  },
  {
    number: '٣',
    title: 'خطة عمل متكاملة',
    description: 'استراتيجية مفصلة لتعزيز تواجدك'
  },
  {
    number: '٤',
    title: 'التكلفة والعائد المتوقع',
    description: 'تقدير شفاف للتكاليف والنتائج'
  }
];
---

<section class="py-32 bg-[#1B2537] relative overflow-hidden">
  <div class="container mx-auto px-6">
    <div class="max-w-4xl">
      <h3 class="text-accent text-2xl mb-4">لنعمل معاً</h3>
      <h2 class="text-5xl md:text-7xl font-bold mb-8 leading-tight">
        لا تقلق بشأن<br />التسويق بعد اليوم
      </h2>
      <a
        href="#contact"
        class="inline-block bg-accent text-primary px-8 py-4 rounded-lg text-lg font-bold hover:bg-accent/90 transition mb-16"
      >
        احجز استشارتك المجانية
      </a>

      <div class="space-y-8">
        <h4 class="text-2xl text-secondary/80">ماذا تتوقع:</h4>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          {
            steps.map((step) => (
              <div class="flex gap-6 items-start">
                <div class="w-12 h-12 rounded-full border-2 border-accent flex items-center justify-center flex-shrink-0">
                  <span class="text-xl font-bold text-accent">{step.number}</span>
                </div>
                <div>
                  <h5 class="text-xl font-bold mb-2">{step.title}</h5>
                  <p class="text-secondary/70">{step.description}</p>
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </div>

  <div class="absolute top-0 right-0 w-1/3 h-full bg-accent/5 -skew-x-12 transform origin-top-right"></div>
</section>