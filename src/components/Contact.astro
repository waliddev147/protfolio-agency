<section id="contact" class="py-20 bg-primary">
  <div class="container mx-auto px-6">
    <h2 class="text-4xl font-bold text-center mb-16">تواصل معنا</h2>
    <div class="max-w-2xl mx-auto">
      <form class="space-y-6">
        <div>
          <label for="name" class="block text-lg mb-2">الاسم</label>
          <input
            type="text"
            id="name"
            class="w-full px-4 py-3 bg-transparent border border-accent/20 rounded-lg focus:border-accent focus:outline-none"
          />
        </div>
        <div>
          <label for="email" class="block text-lg mb-2">البريد الإلكتروني</label>
          <input
            type="email"
            id="email"
            class="w-full px-4 py-3 bg-transparent border border-accent/20 rounded-lg focus:border-accent focus:outline-none"
          />
        </div>
        <div>
          <label for="message" class="block text-lg mb-2">الرسالة</label>
          <textarea
            id="message"
            rows="6"
            class="w-full px-4 py-3 bg-transparent border border-accent/20 rounded-lg focus:border-accent focus:outline-none"
          ></textarea>
        </div>
        <button
          type="submit"
          class="w-full bg-accent text-primary px-8 py-4 rounded-lg text-lg font-bold hover:bg-accent/90 transition"
        >
          إرسال
        </button>
      </form>
    </div>
  </div>
</section>