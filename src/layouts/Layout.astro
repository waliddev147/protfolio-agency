---
import '@fontsource/cairo';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="ar" dir="rtl">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="مصمم ويب ومختص في الهوية البصرية" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-primary text-secondary font-cairo">
    <nav class="fixed w-full z-50 bg-primary/90 backdrop-blur-sm">
      <div class="container mx-auto px-6 py-4">
        <div class="flex justify-between items-center">
          <a href="/" class="text-2xl font-bold text-accent">استوديو</a>
          <div class="space-x-8 space-x-reverse">
            <a href="#about" class="hover:text-accent transition">من نحن</a>
            <a href="#projects" class="hover:text-accent transition">أعمالنا</a>
            <a href="#services" class="hover:text-accent transition">خدماتنا</a>
            <a href="#contact" class="hover:text-accent transition">تواصل معنا</a>
          </div>
        </div>
      </div>
    </nav>
    <slot />
  </body>
</html>

<style is:global>
  html {
    scroll-behavior: smooth;
  }
</style>